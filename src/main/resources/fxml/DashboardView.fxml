<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.upnext.ui.controller.DashboardController">
    <top>
        <ToolBar>
            <Label text="UpNext Dashboard" style="-fx-font-size:16;-fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="New Project" onAction="#onNewProject"/>
            <Button text="Logout" onAction="#onLogout"/>
        </ToolBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.35">
            <VBox spacing="6" style="-fx-padding:8;">
                <Label text="Projects" style="-fx-font-weight:bold;"/>
                <TableView fx:id="projectTable" prefHeight="340"/>
                <HBox spacing="6">
                    <Button text="Open" onAction="#onOpenProject"/>
                    <Button text="Edit" onAction="#onEditProject"/>
                    <Button text="Delete" onAction="#onDeleteProject"/>
                </HBox>
            </VBox>
            <VBox spacing="6" style="-fx-padding:8;">
                <Label text="Tasks" style="-fx-font-weight:bold;"/>
                <TreeTableView fx:id="taskTree" prefHeight="420"/>
                <HBox spacing="6">
                    <Button text="New Task" onAction="#onNewTask"/>
                    <Button text="Start" onAction="#onStartTask"/>
                    <Button text="Complete" onAction="#onCompleteTask"/>
                    <Button text="Refresh" onAction="#onRefreshTasks"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <Label fx:id="statusLabel" style="-fx-padding:6;"/>
    </bottom>
</BorderPane>
